{
    "$schema": "http://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "data": [
        {
            "name": "source_0",
            "url": "data/stocks.csv",
            "format": {
                "type": "csv",
                "parse": {
                    "price": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"price\"] !== null && !isNaN(datum[\"price\"])"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "symbol"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "price"
                    ]
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "max(layer_0_width)"
        },
        {
            "name": "height",
            "update": "max(layer_0_height)"
        },
        {
            "name": "layer_0_width",
            "update": "21"
        },
        {
            "name": "layer_0_height",
            "update": "200"
        },
        {
            "name": "unit",
            "value": {},
            "on": [
                {
                    "events": "mousemove",
                    "update": "group()._id ? group() : unit"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "nested_main_group",
            "type": "group",
            "encode": {
                "update": {
                    "width": {
                        "signal": "width"
                    },
                    "height": {
                        "signal": "height"
                    },
                    "fill": {
                        "value": "transparent"
                    }
                }
            },
            "marks": [
                {
                    "name": "layer_0_marks",
                    "type": "rule",
                    "from": {
                        "data": "source_0"
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "value": 0
                            },
                            "y": {
                                "scale": "y",
                                "field": "mean_price"
                            },
                            "x2": {
                                "field": {
                                    "group": "width"
                                }
                            },
                            "stroke": {
                                "scale": "color",
                                "field": "symbol"
                            },
                            "opacity": {
                                "value": 0.5
                            },
                            "strokeWidth": {
                                "value": 2
                            }
                        }
                    },
                    "clip": true
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "mean_price"
            },
            "range": [
                200,
                0
            ],
            "round": true,
            "nice": true,
            "zero": true
        },
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "data": "source_0",
                "field": "symbol",
                "sort": true
            },
            "range": "category"
        }
    ],
    "axes": [
        {
            "scale": "y",
            "format": "s",
            "orient": "left",
            "title": "MEAN(price)",
            "zindex": 1
        },
        {
            "scale": "y",
            "domain": false,
            "format": "s",
            "grid": true,
            "labels": false,
            "orient": "left",
            "ticks": false,
            "zindex": 0
        }
    ],
    "legends": [
        {
            "stroke": "color",
            "title": "symbol"
        }
    ]
}